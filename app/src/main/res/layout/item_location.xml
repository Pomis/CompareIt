<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pomis.app.materailplotview.Views.PercentageView
            android:id="@+id/pv_availability"
            android:layout_width="48dp"
            android:textSize="15dp"
            android:textColor="#007014"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:gravity="center"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/pv_availability"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_sublabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_label"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/pv_availability" />

        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBaskets"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_walk"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/tv_label"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@id/tv_walking_time"
            android:gravity="center"
            android:src="@drawable/ic_walk" />

        <TextView
            android:id="@+id/tv_walking_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_label"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="8 min"
            android:textSize="16dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
